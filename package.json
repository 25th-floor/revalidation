{
  "name": "revalidation",
  "version": "0.4.0",
  "description": "Higher Order Component for Form Validation in React",
  "main": "lib/index.js",
  "author": "25th-floor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/25th-floor/revalidation.git"
  },
  "scripts": {
    "clean": "rimraf lib dist",
    "build": "npm run build:lib && npm run build:dist",
    "build:lib": "babel src -d lib",
    "build:dist": "NODE_ENV=production rollup -c",
    "example": "NODE_ENV=development webpack-dev-server --inline --config example/webpack.config.js --content-base example/",
    "test": "mocha --compilers js:babel-core/register --recursive --colors",
    "flow": "flow check",
    "lint": "eslint src",
    "prepublish": "npm run clean && npm run build"
  },
  "keywords": [
    "Validation",
    "React",
    "Forms"
  ],
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-ramda": "^1.2.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "flow-bin": "^0.47.0",
    "lerna": "^2.0.0-rc.5",
    "mocha": "^3.4.2",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "rimraf": "^2.6.1",
    "rollup": "^0.42.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.1",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "dependencies": {
    "ramda": "^0.24.1"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  }
}
